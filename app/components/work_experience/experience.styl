.work_experience
  width 88%
  margin 40px auto

  h2
    border-bottom 3px solid #000
    cursor pointer
    transition color 0.3s ease
    &:hover
      color rgba(2, 128, 191, 0.84);

  .exp-box
    display flex
    justify-content space-between
    margin 30px 0
    cursor alias
    span
      display block

    .right-exp-box
      p
        width 600px
        margin 0

  .exp-box-none
    display none

  .none
    display none

  .form
    text-align left
    input
      margin 0 40px 0
      width 300px
      height 20px
      padding 0 10px
      border-radius 5px
      font-size 14px
      outline none

    button
      border-radius 5px
      border-color #1e314f
      padding 5px 10px
      background #1e314f
      outline none
      color #fff
      cursor pointer

  .h2-new
    text-align center
    border-bottom 2px solid #000
    cursor pointer
    margin 0 auto
    color #008000
    font-style italic
    transition-property border-bottom, color
    transition-duration 0.4s, 1.5s
    transition-timing-function ease
    &:hover
      color #008000
