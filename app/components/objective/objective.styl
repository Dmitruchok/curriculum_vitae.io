.objective
  width 88%
  margin 40px auto

  h2
    text-align left
    border-bottom 3px solid #000
    cursor pointer
    transition color 0.3s ease
    &:hover
      color rgba(2, 128, 191, 0.84);

  p
    font-size 18px
    cursor alias

  .none
    display none

  .h2-new
    text-align center
    border-bottom 2px solid #000
    cursor pointer
    margin 0 auto
    color #008000
    font-style italic
    transition-property border-bottom, color
    transition-duration 0.4s, 1.5s
    transition-timing-function ease
    &:hover
      color #008000
