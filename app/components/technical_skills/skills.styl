  width 88%
  margin 40px auto

  h2
    border-bottom 3px solid #000
    cursor pointer

  .skill-box
    display flex
    justify-content space-between
    margin 30px 0
    cursor alias
    span
      display block

  .skill-box-none
    display none

  .right-skill-box
    p
      width 600px
      margin 0
  .h2-new
    text-align center
    border-bottom 3px solid #000
    cursor pointer
    margin 0 auto
